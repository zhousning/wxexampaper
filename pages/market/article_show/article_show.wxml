<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
    <view slot="backText">返回</view>
    <view slot="content">{{article.title}}</view>
</cu-custom>
<scroll-view scroll-y class="scrollPage">
    <view>
        <view class="padding-xs flex align-center">
            <view class="flex-sub text-center">
                <view class="text-xl padding-top padding-lr">
                    <text class="text-black text-bold">{{article.title}}</text>
                </view>
                <view class="padding text-gray">{{article.dept}} {{article.date}}</view>
            </view>
        </view>
        <view class="padding-lr text-content article-content text-lg">
            <rich-text nodes="{{article.content}}"></rich-text>
        </view> 
    </view>

    <view class="padding flex justify-center">
        <image style="width:100%;" mode="widthFix" src="https://636c-cloud1-6gqvn1deb6d48dd5-1309064836.tcb.qcloud.la/%E5%BE%AE%E4%BF%A1%E5%9B%BE%E7%89%87_20220121153510.jpg?sign=9f83274bc93fc6987f087d8e0423b168&t=1642750585" >
       </image>
    </view>
    <view class="padding-lr flex justify-between">
     <text class="text-gray">山东公用水务集团</text>
    <text class="text-gray">发稿部门：{{article.dept}}</text>
    </view>
    <view class='cu-tabbar-height'></view>
</scroll-view>